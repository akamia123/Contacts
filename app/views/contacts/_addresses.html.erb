<table class="contact" cellspacing="0">
    <tr>
        <th>Address</th>
        <th>Address 2</th>
        <th>City</th>
        <th>State</th>
        <th>Zip Code</th>
        <th>Type</th>
        <th colspan="2"></th>        
    </tr>
    <% for address in @contact.addresses %>
        <tr>
            <td><%= address.address1 %></td>
            <td><%= address.address2 %></td>
            <td><%= address.city %></td>
            <td><%= address.state %></td>
            <td><%= address.zip_code %></td>
            <td><%= address.address_type %></td>
            <td><%= link_to image_tag("/images/edit.png"), edit_contact_address_url(@contact.id, address.id)%></td>
            <td>
                <%= link_to image_tag("/images/cross.png"), contact_address_url(@contact.id, address.id), 
                    :method => :delete, :confirm => "Are you sure you want to delete this address?" %>
            </td>
        </tr>
    <% end %>
</table>