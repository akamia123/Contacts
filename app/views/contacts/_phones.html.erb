<table class="contact" cellspacing="0">
    <tr>
        <th>Phone Number</th>
        <th>Type</th>
        <th colspan="2"></th>
    </tr>
    <% for phone in @contact.telephones %>
        <tr>
            <td><%= number_to_phone(phone.number, :area_code => true) %></td>
            <td><%= phone.phone_type %></td>
            <td><%= link_to image_tag("/images/edit.png"), edit_contact_telephone_url(@contact.id, phone.id)%></td>
            <td>
                <%= link_to image_tag("/images/cross.png"), contact_telephone_url(@contact.id, phone.id), 
                    :method => :delete, :confirm => "Are you sure you want to delete this phone number?" %>
            </td>
        </tr>
    <% end %>
</table>